{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Launch via NPM",
            "request": "launch",
            "runtimeArgs": [
                "run",
                "t"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Test All with Options",
            "program": "${workspaceFolder}/node_modules/ts-mocha/bin/ts-mocha",
            "args": [
                // "--opts", 
                // "${workspaceFolder}/support/mocha.opts",
                "${workspaceFolder}/test/integration/*",
                "--timeout",  // so it doesnt run into timeouts while debugging
                "200000"
            ],
            // "console": "integratedTerminal",
            // "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Jest Tests",
            "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
            "args": [
                "--verbose",
                "--useStderr",
                "--forceExit",
                "--detectOpenHandles",
                "test/integration/Stream.test.ts"
            ],
            // "preLaunchTask": "build",
            "internalConsoleOptions": "openOnSessionStart",
            // "outFiles": [
            //     "${workspaceRoot}/dist/**/*"
            // ],
            // "envFile": "${workspaceRoot}/.env"
        },
        {
            "type": "node",
            "runtimeVersion": "14.17.0", // If i need to run node 4.8.7
            "request": "launch",
            "name": "Jest single run all tests",
            "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
            "env": { "CI": "true" },
            "args": [
            //   "-c",
            //   "./config/test/jest.json",
              "--verbose",
              "-i",
              "--no-cache",
              "test/integration/Stream.test.ts"
            ],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            // "console": "integratedTerminal",
            // "internalConsoleOptions": "neverOpen"
          }
    ]
}